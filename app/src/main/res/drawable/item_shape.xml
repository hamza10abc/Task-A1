<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shape (the base rectangle with different corner radii) -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp" />
            <solid android:color="#000000" /> <!-- Outer shape color -->
        </shape>
    </item>

    <!-- Inner shape (positioned with margins inside the outer shape) -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp" />
            <solid android:color="#FFFFFF" /> <!-- Outer shape color -->
        </shape>
    </item>

</layer-list>